{
  "info": {
    "_postman_id": "equipment-api-2025",
    "name": "Equipment Management API",
    "description": "API Collection for Equipment Management - Studio Rental System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public - Get Available Equipment",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/equipment/available?page=1&limit=10",
          "host": ["{{base_url}}"],
          "path": ["equipment", "available"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "search", "value": "camera", "disabled": true }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Public - Get Equipment Detail",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/equipment/{{equipment_id}}",
          "host": ["{{base_url}}"],
          "path": ["equipment", "{{equipment_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Staff - Get All Equipment",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{staff_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/equipment?page=1&limit=10&sortBy=createdAt&sortOrder=desc",
          "host": ["{{base_url}}"],
          "path": ["equipment"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" },
            { "key": "status", "value": "available", "disabled": true },
            { "key": "search", "value": "camera", "disabled": true },
            { "key": "sortBy", "value": "createdAt" },
            { "key": "sortOrder", "value": "desc" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Staff - Create Equipment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "  const response = pm.response.json();",
              "  if (response.data && response.data._id) {",
              "    pm.collectionVariables.set('equipment_id', response.data._id);",
              "    console.log('Saved equipment_id:', response.data._id);",
              "  }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{staff_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Canon EOS R6 Mark II\",\n  \"description\": \"Full-frame mirrorless camera 24.2MP\",\n  \"totalQty\": 7,\n  \"pricePerHour\": 500000,\n  \"image\": \"https://example.com/canon-r6.jpg\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/equipment",
          "host": ["{{base_url}}"],
          "path": ["equipment"]
        }
      },
      "response": []
    },
    {
      "name": "Staff - Update Equipment",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{staff_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Canon EOS R6 Mark II (Updated)\",\n  \"pricePerHour\": 550000,\n  \"totalQty\": 10\n}"
        },
        "url": {
          "raw": "{{base_url}}/equipment/{{equipment_id}}",
          "host": ["{{base_url}}"],
          "path": ["equipment", "{{equipment_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Staff - Set Maintenance Quantity",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{staff_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "{{base_url}}/equipment/{{equipment_id}}/set-maintenance-quantity",
          "host": ["{{base_url}}"],
          "path": ["equipment", "{{equipment_id}}", "set-maintenance-quantity"]
        }
      },
      "response": []
    },
    {
      "name": "Staff - Delete Equipment",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{staff_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/equipment/{{equipment_id}}",
          "host": ["{{base_url}}"],
          "path": ["equipment", "{{equipment_id}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "default"
    },
    {
      "key": "staff_token",
      "value": "your_staff_token_here",
      "type": "default"
    },
    {
      "key": "equipment_id",
      "value": "",
      "type": "default"
    }
  ]
}

{
  "info": {
    "name": "Studio Availability API Tests",
    "description": "Postman collection for testing Studio Availability and Booked Schedules endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "studio_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login (Staff/Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"staff@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has token\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "    pm.collectionVariables.set(\"auth_token\", jsonData.token);",
                  "});",
                  "",
                  "pm.test(\"Token is not empty\", function () {",
                  "    pm.expect(pm.collectionVariables.get(\"auth_token\")).to.not.be.empty;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Public Availability Endpoints",
      "item": [
        {
          "name": "Get All Studios Availability",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/studios/availability?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["studios", "availability"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has studios array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('studios');",
                  "    pm.expect(jsonData.studios).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Response has pagination info\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('pagination');",
                  "    pm.expect(jsonData.pagination).to.have.property('page');",
                  "    pm.expect(jsonData.pagination).to.have.property('limit');",
                  "    pm.expect(jsonData.pagination).to.have.property('total');",
                  "});",
                  "",
                  "pm.test(\"Studio objects have required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.studios.length > 0) {",
                  "        var studio = jsonData.studios[0];",
                  "        pm.expect(studio).to.have.property('_id');",
                  "        pm.expect(studio).to.have.property('name');",
                  "        pm.expect(studio).to.have.property('status');",
                  "        pm.expect(studio).to.have.property('isAvailable');",
                  "        pm.collectionVariables.set(\"studio_id\", studio._id);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Specific Studio Availability",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/studios/{{studio_id}}/availability?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["studios", "{{studio_id}}", "availability"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has studio object\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('studio');",
                  "    pm.expect(jsonData.studio).to.have.property('_id');",
                  "    pm.expect(jsonData.studio).to.have.property('name');",
                  "});",
                  "",
                  "pm.test(\"Response has availableSlots array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('availableSlots');",
                  "    pm.expect(jsonData.availableSlots).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Response has pagination info\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('pagination');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Check Time Slot Availability",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startTime\": \"{{tomorrow_10am}}\",\n  \"endTime\": \"{{tomorrow_1pm}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/studios/{{studio_id}}/check-availability",
              "host": ["{{base_url}}"],
              "path": ["studios", "{{studio_id}}", "check-availability"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has availability info\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('isAvailable');",
                  "    pm.expect(jsonData).to.have.property('reason');",
                  "    pm.expect(jsonData).to.have.property('requestedSlot');",
                  "});",
                  "",
                  "pm.test(\"Requested slot has duration\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.requestedSlot).to.have.property('duration');",
                  "    pm.expect(jsonData.requestedSlot.duration).to.be.a('number');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Protected Booked Schedules Endpoints",
      "item": [
        {
          "name": "Get All Studios Booked Schedules",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/studios/booked-schedules?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["studios", "booked-schedules"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has studios array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('studios');",
                  "    pm.expect(jsonData.studios).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Studio booking summary has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.studios.length > 0) {",
                  "        var studio = jsonData.studios[0];",
                  "        pm.expect(studio).to.have.property('_id');",
                  "        pm.expect(studio).to.have.property('name');",
                  "        pm.expect(studio).to.have.property('totalBookings');",
                  "        pm.expect(studio).to.have.property('totalRevenue');",
                  "        pm.expect(studio).to.have.property('utilizationRate');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Specific Studio Booked Schedules",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/studios/{{studio_id}}/booked-schedules?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["studios", "{{studio_id}}", "booked-schedules"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has studio object\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('studio');",
                  "    pm.expect(jsonData.studio).to.have.property('_id');",
                  "    pm.expect(jsonData.studio).to.have.property('name');",
                  "});",
                  "",
                  "pm.test(\"Response has bookedSlots array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('bookedSlots');",
                  "    pm.expect(jsonData.bookedSlots).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Booked slots have booking details\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.bookedSlots.length > 0) {",
                  "        var slot = jsonData.bookedSlots[0];",
                  "        pm.expect(slot).to.have.property('startTime');",
                  "        pm.expect(slot).to.have.property('endTime');",
                  "        pm.expect(slot).to.have.property('booking');",
                  "        pm.expect(slot.booking).to.have.property('customer');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "tomorrow_10am",
      "value": "",
      "type": "string"
    },
    {
      "key": "tomorrow_1pm",
      "value": "",
      "type": "string"
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set tomorrow's date for time slot testing",
          "var tomorrow = new Date();",
          "tomorrow.setDate(tomorrow.getDate() + 1);",
          "",
          "// Set 10 AM tomorrow",
          "var tomorrow10am = new Date(tomorrow);",
          "tomorrow10am.setHours(10, 0, 0, 0);",
          "pm.collectionVariables.set(\"tomorrow_10am\", tomorrow10am.toISOString());",
          "",
          "// Set 1 PM tomorrow",
          "var tomorrow1pm = new Date(tomorrow);",
          "tomorrow1pm.setHours(13, 0, 0, 0);",
          "pm.collectionVariables.set(\"tomorrow_1pm\", tomorrow1pm.toISOString());"
        ]
      }
    }
  ]
}